{# If a layout has `pagination` in its frontmatter, this partial layout can produce previous/next links.  #}
<nav aria-label="Previous and Next Navigation">
  <ol>
    {% if pagination.href.next %}<li><a id="nav-next" href="{{ pagination.href.next }}">{% if pagination.pageNumber == 0 %}More ➡{% else %}Next ➡{% endif %}</a></li>{% else %}{% endif %}
    {% if pagination.href.previous %}<li><a id="nav-previous" href="{{ pagination.href.previous }}">⬅ Previous</a></li>{% else %}{% endif %}
  </ol>
</nav>
